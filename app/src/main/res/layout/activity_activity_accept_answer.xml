<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.m2dl.challenge.challenge.ActivityAcceptAnswer">

    <TextView android:text="RÃ©ponse J2 ici" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAnswerReceived" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accepter"
        android:id="@+id/btnAccept"
        android:layout_below="@+id/tvAnswerReceived"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="restartGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refuser"
        android:id="@+id/btnRefuse"
        android:layout_alignTop="@+id/btnAccept"
        android:layout_toRightOf="@+id/btnAccept"
        android:layout_toEndOf="@+id/btnAccept"
        android:onClick="restartGame"/>

</RelativeLayout>
